<nav aria-label="Page navigation" style="padding-left:10px">
    <ul class="pagination">
        {% if (page == 1) %}
        <li>
            <a href="#" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {% else %}
        <li>
            <a href="{{currenturl}}&page={{lastpage}}#comment" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>
        {% endif %} {% for pageNumber in range(1, totalNumberOfPages) %} {% if (not pageNumber == "0") %}
        <li>
            <a href="{{currenturl}}&page={{pageNumber}}#comment">{{pageNumber}}</a>
        </li>{% endif %} {% endfor %} {% if (page == totalNumberOfPages) %}
        <li>
            <a href="#" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        {% else %}
        <li>
            <a href="{{currenturl}}&page={{nextpage}}#comment" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>
        {% endif %}
    </ul>
</nav>