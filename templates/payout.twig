{% extends "./layout/layout_full.twig" %}

{% block content %}
    <div class="col-md-6 col-md-offset-3">
		<div class="panel panel-primary">
            <div class="panel-heading">
                {{pagename}}               
            </div>
			<div class="panel-body">
                {% if errors %}
                    {% for msg in errors %}
                        <div class="alert alert-error">{{ msg }}<div>
                    {% endfor %}
                {% endif %}
                {% if success %}
                    <div class="alert alert-success">{{ success }}<div>
                {% endif %}
				<div class="row">
					<div class="col-lg-12">
						<form class="form" method="post" id="login-nav">
                            <div class="form-group">
                                    <label class="sr-only" for="amount">Amount</label>
                                    <input type="number" name="amount" max="{{maximum}}" min="{{minimum}}" id="amount" class="form-control" placeholder="Amount" required>
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="bank">Bank</label>
                                <select name="bank" id="bank" class="form-control">
                                    <option value="">Select Bank</option>
                                    {% for key,val in banks %}
                                        <option value="{{ key }}">{{ value }}</option>
                                    {% endfor %}
                                </select>                                           
                            </div>
                            <div class="form-group">
                                    <label class="sr-only" for="account_number">Account Number</label>
                                    <input type="number" name="account_number" id="account_number" class="form-control" placeholder="account Number" required>                                             
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="account_name">Account Name</label>
                                <input type="text" name="account_name" class="form-control" placeholder="account name" required>                                             
                            </div>
                            <div class="form-group">
                                <label class="sr-only" for="type">Account Type</label>
                                <select name="account_type" id="account_type" class="form-control">
                                    <option value="">Select account type</option>
                                    <option value="current">Current</option>
                                    <option value="savings">Savings</option>
                                </select>                                           
                            </div>
                            <div class="form-group">
                                <input type="submit" name="payout" class="btn btn btn-block" value="Submit">
                            </div>
                        </form>								
					</div>
				</div>
			</div>
		</div>
	</div> 
{% endblock %}